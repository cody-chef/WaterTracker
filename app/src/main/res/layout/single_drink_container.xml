<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/medium_level_margin_8dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="@dimen/small_level_margin_4dp"
    card_view:cardElevation="@dimen/medium_level_margin_8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/medium_level_margin_8dp"
        android:layout_marginRight="@dimen/medium_level_margin_8dp"
        android:layout_marginTop="@dimen/small_level_margin_4dp"
        android:layout_marginBottom="@dimen/small_level_margin_4dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/drinkImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/reply_white_50"
            android:clickable="false"
            android:focusable="false"
            android:src="@drawable/ic_history_black_24dp" />

        <TextView
            android:id="@+id/drinkText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/reply_black_800" />

        <TextView
            android:id="@+id/amountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="true" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
